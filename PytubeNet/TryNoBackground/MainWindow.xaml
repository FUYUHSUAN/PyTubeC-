        <Image x:Name="soil6" HorizontalAlignment="Left" Height="41" Margin="340,370,0,0" VerticalAlignment="Top" Width="96" Source="/soil.png" Stretch="UniformToFill"/>
        <Image x:Name="myHand" HorizontalAlignment="Left" Height="61" Margin="343,132,0,0" VerticalAlignment="Top" Width="45" Source="/pointHand.png"/>
        <Image x:Name="myHand_Copy" HorizontalAlignment="Left" Height="61" Margin="415,132,0,0" VerticalAlignment="Top" Width="45" Source="/pointHandBl.png"/>
        <Image x:Name="ball1" HorizontalAlignment="Left" Height="60" Margin="142,200,0,0" VerticalAlignment="Top" Width="60" Source="/ball1.png" RenderTransformOrigin="0.5,0.5" Visibility="Collapsed">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image x:Name="ball2" HorizontalAlignment="Left" Height="60" Margin="180,276,0,0" VerticalAlignment="Top" Width="60" Source="/ball1.png" RenderTransformOrigin="0.5,0.5" Visibility="Collapsed">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
