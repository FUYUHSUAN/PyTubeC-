        </Image>
        <Image x:Name="ball4" HorizontalAlignment="Left" Height="60" Margin="526,174,0,0" VerticalAlignment="Top" Width="60" Source="/ball1.png" RenderTransformOrigin="0.5,0.5" Visibility="Collapsed">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
