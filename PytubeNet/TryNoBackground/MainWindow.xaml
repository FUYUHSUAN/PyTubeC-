            </Image.RenderTransform>
        </Image>
        <Image x:Name="ball3" HorizontalAlignment="Left" Height="60" Margin="358,246,0,0" VerticalAlignment="Top" Width="60" Source="/ball1.png" RenderTransformOrigin="0.5,0.5" Visibility="Collapsed">
